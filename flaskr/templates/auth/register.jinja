{% extends "base.jinja" %}

{# Register both inflates inside the header block and title block of base.jinja.
this allows us to declare the header and title text without writing it twice. #}
{% block header %}
    <h1>{% block title %}Register{% endblock %}</h1>
{% endblock %}

{% block content %}
    <form method="post">
        <label for="username">Username</label>
        <input name="username" id="username" required>

        <label for="password">Password</label>
        <input name="password" id="password" type="password" required>

        <input type="submit" value="Register">
    </form>
{% endblock %}