{% extends "base.jinja" %}

{% block header %}
    <h1>{% block title %}Posts{% endblock %}</h1>

    {% if g.user %}
        <a class="action" href="{{ url_for('blog.create') }}">New</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% for post in posts %}
        <article class="post">
            <header>
                <div>
                    <h1>{{ post['Title'] }}</h1>
                    <div class="about">
                        by {{ post['Username'] }} on {{ post['CreationTime'].strftime('%Y-%m-%d') }}
                    </div>
                </div>
                
                {% if g.user['Id'] == post['AuthorId'] %}
                    <a class="action" href="{{ url_for('blog.update', post_id=post['Id']) }}">Edit</a>
                {% endif %}
            </header>
            <p class="body">{{ post['Body'] }}</p>
        </article>

        {% if not loop.last %}
            <hr>
        {% endif %}
    {% endfor %}
{% endblock %}